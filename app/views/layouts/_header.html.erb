<header class="page-header">
    <%= link_to(root_path) do %>
      <h1 id="logo">Hospital Hangout</h1>
    <% end %>
    <nav>
      <ul class="nav">
          <li class="<%= 'active' if current_page?(root_path) %> nav-item">
            <%= link_to "Home",   root_path %></li>
          <li class="<%= 'active' if current_page?(help_path) %> nav-item">
            <%= link_to "Help",   help_path %></li>
          <% if !logged_in? %>
            <li class="<%= 'active' if current_page?(about_path) %> nav-item">
              <%= link_to "About",   about_path %></li>
            <li class="<%= 'active' if current_page?(hospitals_path) %> nav-item">
              <%= link_to "Hospitals",   hospitals_path %></li>
            <li class="nav-item float-right"><%= link_to "Log in", login_path %></li>
            <% layout = "#{controller.controller_name}/#{controller.action_name}" %>
            <li class="<%= 'active' if layout == "users/new" || layout == "users/create"  %> nav-item float-right"><%= link_to "Sign up", signup_path %></li>
          <% else %>
            <li class="dropdown nav-item float-right">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
            <li class="nav-item float-right <%= 'active' if current_page?(users_path) %>"><%= link_to "Users", '#' %></li>
          <% end %>
      </ul>
    </nav>
</header>